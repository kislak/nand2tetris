/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=not.sel);
    And(a=a, b=not.sel, out=not.sel.and.a);
    And(a=b, b=sel, out=sel.and.b);
    Or(a=not.sel.and.a, b=sel.and.b, out=out);
}